
<div class="container">
	<h1 style="text-align: center;">{{category.name}}</h1>

	 <!--Bootstrap card looping for every item in that category from database-->

	<div class="adminOnly container" style=" visibility: hidden;" align="center">
		<a style="text-align:center; color:yellow" href="/addform" class="card-link"><button
				type="button"
				class="btn btn-secondary btn-outline-secondary"
			><i class="far fa-plus-square"></i> Add Item</button></a>
			
	</div>

	<div class="row">
		{{#each category.Items}}
			<div class="card col-md-3">
				<img
					style=" width:18vw; height: 15vw;"
					src="{{this.image}}"
					class="card-img-top"
					alt="..."
				/>
				<div class="card-body">
					<h5 class="card-title">{{this.title}}</h5>
					<p class="card-text"><span
							class="collapse"
							id="more{{this.id}}"
						>{{this.description}}</span>
						<span><a
								href="#more{{this.id}}"
								data-toggle="collapse"
							>Read description...
								<i class="fa fa-caret-down"></i></a></span></p>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item">{{category.name}}</li>
					<li class="list-group-item">Â£{{this.price}}</li>
					<li class="list-group-item">Select Quantity:
						<input id="quantity{{this.id}}" type="number" value="1" min="1" max="999" /></li>
				</ul>

				<div class="card-body">
					<div class="btn-toolbar" role="group" aria-label="Basic outlined example">
					<a
						onclick="addToCart({{json this}})"
						href="#"
						class="card-link"
					><button id="addCart" title="Add to Cart" type="button" class="btn btn-warning btn-outline-warning"><i style="color:darkorange;" class="fas fa-cart-plus"></i></button></a>
		
					 <!--Admin buttons to Delete/Update items in category-->	
				
				<div class="adminOnly" style="visibility: hidden;">
					
						<a  
							href="/item/{{this.id}}/delete"
							class="card-link"
						><button
								title="Delete Item"
						        id="delButton"
								type="button"
								class="btn btn-dark btn-outline-dark ml-4"
							><i  style="color: rgb(196, 41, 41);" class="far fa-trash-alt"></i></button></a>
							
						<a 
							href="/updateform/{{this.id}}"
							class="card-link"
						><button
								title="Edit/Update Item"
								id="updButton"
								type="button"
								class="btn btn-success btn-outline-success ml-2"
							><i  style="color: greenyellow;" class="fas fa-redo-alt"></i></button></a>
							
					</div>
					</div>
					</div>
			</div>
		{{/each}}
	</div>

</div>