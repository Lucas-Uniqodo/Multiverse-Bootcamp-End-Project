
  <h2 style="text-align: center;">Categories</h2>


<div class="container">
  <div class="row">
      {{#each categories}}   
        <div  class="card col-md-3" style="width: 18rem; text-align:center">
            <a href="/categories/{{this.id}}"><img src="{{this.categoryImage}}" class="card-img-top" alt="..."></a>
            <div class="card-body">
              <p class="card-text">{{this.name}}</p>
            </div>
        </div>
      {{/each}}
  </div>
</div>


